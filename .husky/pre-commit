#!/bin/sh
. "$(dirname -- "$0")/_/husky.sh"

# DevOps pre-commit quality gates
echo "ğŸ” Running pre-commit quality checks..."

# Check for console.log statements in production code
echo "ğŸ“ Checking for console.log statements..."
if grep -r "console\.log" src/ --exclude-dir=__tests__ --exclude="*.test.*" --exclude="*.spec.*" 2>/dev/null; then
  echo "âŒ Found console.log statements in production code. Please remove them or use log.debug() instead."
  exit 1
fi

# Run linting with zero warnings allowed
echo "ğŸ” Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix all errors and warnings."
  exit 1
fi

# Run TypeScript type checking
echo "ğŸ” Running TypeScript check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript check failed. Please fix all type errors."
  exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
npm run test:ci
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Please ensure all tests pass."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
